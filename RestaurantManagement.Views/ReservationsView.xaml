<Window x:Class="RestaurantManagement.Views.ReservationsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reservation Management" Height="600" Width="1000"
        Background="#F4F7F9" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="BorderBrush" Value="#DCDFE6"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F9FAFB"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="CanUserAddRows" Value="False"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="#2C3E50" Padding="20,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="📅" FontSize="24" Margin="0,0,15,0"/>
                <TextBlock Text="RESERVATION MANAGEMENT" Foreground="White" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="12" Margin="0,0,10,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" Color="#D0D7DE" Opacity="0.2" ShadowDepth="2"/>
                </Border.Effect>

                <DockPanel Margin="15">
                    <TextBlock Text="Active Reservations" DockPanel.Dock="Top" FontSize="18" FontWeight="Bold" Foreground="#34495E" Margin="0,0,0,15"/>

                    <Button Content="🗑️ Delete Selected" 
                            DockPanel.Dock="Bottom" 
                            Click="DeleteReservation_Click" 
                            Style="{StaticResource ModernButtonStyle}" 
                            Background="#E74C3C" 
                            Margin="0,15,0,0"/>

                    <DataGrid x:Name="ReservationsDataGrid" 
                              ItemsSource="{Binding Reservations}" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Client" Binding="{Binding CustomerName}" Width="*"/>
                            <DataGridTextColumn Header="Phone" Binding="{Binding PhoneNumber}" Width="*"/>
                            <DataGridTextColumn Header="Guests" Binding="{Binding NumberOfPeople}" Width="Auto"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=d}" Width="Auto"/>
                            <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </Border>

            <Border Grid.Column="1" Background="White" CornerRadius="12" Margin="10,0,0,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" Color="#D0D7DE" Opacity="0.2" ShadowDepth="2"/>
                </Border.Effect>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <TextBlock Text="Add New Entry" FontSize="18" FontWeight="Bold" Foreground="#34495E" Margin="0,0,0,20"/>

                        <TextBlock Text="Client Name" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                        <TextBox x:Name="CustomerNameTxt"/>

                        <TextBlock Text="Phone Number" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                        <TextBox x:Name="PhoneTxt"/>

                        <TextBlock Text="Guests" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                        <TextBox x:Name="GuestsTxt"/>

                        <TextBlock Text="Date" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                        <DatePicker x:Name="ResDatePicker" Margin="0,0,0,15"/>

                        <TextBlock Text="Arrival Time" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                        <TextBox x:Name="TimeTxt" Text="18:00"/>

                        <Button Content="✨ Create Reservation" 
                                Click="AddReservation_Click" 
                                Style="{StaticResource ModernButtonStyle}" 
                                Background="#2ECC71" 
                                Height="45" Margin="0,10,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>