<Window x:Class="RestaurantManagement.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Restaurant Management" Height="500" Width="850"
        Background="#F4F7F9" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12" 
                                BorderBrush="#E0E6ED" 
                                BorderThickness="1">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" Color="#D0D7DE" Opacity="0.3" ShadowDepth="2"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3498DB"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2C3E50">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="RESTAURANT MANAGEMENT" 
                           Foreground="White" 
                           FontSize="28" 
                           FontWeight="ExtraBold" 
                           HorizontalAlignment="Center"
                           />
                <TextBlock Text="Administrator Dashboard" 
                           Foreground="#BDC3C7" 
                           HorizontalAlignment="Center" 
                           FontSize="14" 
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <UniformGrid Grid.Row="1" Columns="2" Margin="30">
            <Button Content="👥 EMPLOYEES" Style="{StaticResource MenuButtonStyle}" Click="OpenEmployees_Click"/>
            <Button Content="🍽️ MENU" Style="{StaticResource MenuButtonStyle}" Click="OpenMenu_Click"/>
            <Button Content="📅 RESERVATIONS" Style="{StaticResource MenuButtonStyle}" Click="OpenReservations_Click"/>

            <Button Content="🔄 CHANGE RESTAURANT" 
                    Click="ChangeRestaurant_Click" 
                    Style="{StaticResource MenuButtonStyle}"
                    Background="#ECF0F1"/>
        </UniformGrid>
    </Grid>
</Window>